<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/app_background</item>
    </style>

    <style name="TextAppearance.Toolbar.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/tb_tv_dimen</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Style.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="boxBackgroundColor">@color/til_background_color</item>
        <item name="boxStrokeWidth">@dimen/til_stroke_width</item>
        <item name="boxStrokeColor">@color/app_color</item>
        <item name="boxStrokeWidthFocused">@dimen/til_stroke_width</item>
        <item name="hintTextColor">@color/app_color</item>
    </style>

    <style name="TextAppearance.TextInputEditText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_dimen</item>
    </style>

    <style name="Style.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/radius</item>
        <item name="android:textSize">@dimen/btn_text_dimen</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/app_color</item>
        <item name="strokeColor">@color/app_color</item>
        <item name="strokeWidth">3dp</item>
    </style>

    <style name="tv_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/tv_dimen</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="sign_in_intro_style" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sign_in_tv_dimen</item>
        <item name="android:textColor">@color/sign_in_intro</item>
    </style>


    <style name="chat_item_tv_text" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/chat_item_tv_dimen</item>
        <item name="android:textColor">@color/chat_item_tv_color</item>
    </style>

    <style name="chat_item_tv_username" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/chat_item_tv_username_dimen</item>
        <item name="android:textColor">@color/chat_item_tv_username_color</item>
    </style>

    <style name="chat_et_style" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/chat_et_dimen</item>
        <item name="android:textColorHint">@color/chat_et_color</item>
        <item name="android:textColor">@color/chat_et_color</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="TextAppearance.Message.Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/message_text_dimen</item>
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="TextAppearance.Message.Time" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/message_time_dimen</item>
        <item name="android:textColor">@color/medium_gray</item>
    </style>

</resources>
