<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="TextAppearance.Toolbar.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/tb_tv_dimen</item>
        <item name="android:textColor">@color/colorOnPrimary_900</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="Style.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="boxBackgroundColor">@color/colorSecondary</item>
        <item name="endIconTint">@color/colorOnPrimary_600</item>
        <item name="helperTextTextColor">@color/colorOnPrimary_600</item>
        <item name="counterTextColor">@color/colorOnPrimary_600</item>
        <item name="boxStrokeWidth">@dimen/til_stroke_width</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidthFocused">@dimen/til_stroke_width</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorOnPrimary_600</item>
    </style>

    <style name="TextAppearance.TextInputEditText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorOnPrimary_800</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Style.Sign.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/transparent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorOnPrimary_800</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_dimen</item>
    </style>

    <style name="Style.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/radius</item>
        <item name="android:textSize">@dimen/btn_text_dimen</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">3dp</item>
    </style>

    <style name="TextAppearance.Message.Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/message_text_dimen</item>
        <item name="android:textColor">@color/colorOnPrimary_800</item>
    </style>

    <style name="TextAppearance.Message.Time" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/message_time_dimen</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>

</resources>
