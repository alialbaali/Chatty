<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorOnSecondary</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/colorOnSecondary</item>
        <item name="android:colorPrimary">@color/colorAccent</item>
    </style>

    <style name="ProgressBar" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">@color/colorAccent</item>
        <item name="trackCornerRadius">@dimen/spacing_extra_large</item>
    </style>

    <style name="ToolbarTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/size_huge</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="boxBackgroundColor">@color/colorSurface</item>
        <item name="endIconTint">@color/colorOnSecondary</item>
        <item name="helperTextTextColor">@color/colorOnSecondary</item>
        <item name="counterTextColor">@color/colorOnSecondary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorOnSecondary</item>
    </style>

    <style name="TextInputEditText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/spacing_normal</item>
        <item name="android:textSize">@dimen/size_normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#F0F0F0</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_small</item>
    </style>

    <style name="MessageTextView" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/size_extra_small</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ImageViewShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
    </style>

    <style name="DialogItem" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/ripple_item</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
    </style>

    <style name="SettingsItem" parent="DialogItem">
        <item name="android:background">@drawable/ripple_item_settings</item>
    </style>

    <style name="DialogThemeRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:buttonTint">@color/colorPrimary</item>
        <item name="android:padding">@dimen/spacing_normal</item>
    </style>

    <style name="SplashScreenTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/shape_splash_screen</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/colorOnSecondary</item>
        <item name="android:colorPrimary">@color/colorAccent</item>
    </style>

    <style name="PlaceholderTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/size_huge</item>
    </style>

    <style name="AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/colorBackground</item>
        <item name="android:elevation">@dimen/elevation_normal</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="liftOnScroll">true</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="HeadView">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_view_head</item>
    </style>

    <style name="Dialog">
        <item name="android:background">@drawable/shape_dialog</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="UserImageView">
        <item name="android:background">@color/colorSurface</item>
        <item name="android:src">@drawable/ic_round_person_24</item>
    </style>

    <style name="UserNameTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/size_extra_large</item>
    </style>

    <style name="UserUsernameTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">@dimen/size_extra_small</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:maxLines">3</item>
        <item name="android:background">@drawable/shape_edit_text_message</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textColorHint">@color/colorOnSecondary</item>
    </style>

    <style name="ChatyChatyTextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/size_giant</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:text">@string/app_name</item>
    </style>

</resources>
