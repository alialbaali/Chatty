<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/colorOnSecondary</item>
        <item name="android:colorPrimary">@color/colorAccent</item>
    </style>

    <style name="ToolbarText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/size_huge</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="boxBackgroundColor">@color/colorSurface</item>
        <item name="endIconTint">@color/colorOnSecondary</item>
        <item name="helperTextTextColor">@color/colorOnSecondary</item>
        <item name="counterTextColor">@color/colorOnSecondary</item>
        <item name="boxStrokeWidth">@dimen/til_stroke_width</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidthFocused">@dimen/til_stroke_width</item>
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorOnSecondary</item>
    </style>

    <style name="TextInputEditText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="singleLine">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SignButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_dimen</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/radius</item>
        <item name="android:textSize">@dimen/btn_text_dimen</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#F0F0F0</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>

    <style name="MessageText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/message_text_dimen</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MessageTime" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/message_time_dimen</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>

    <style name="ImageViewShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ImageViewShapeAppearanceExpanded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0%</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
    </style>

    <style name="DialogItem" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/ripple_item</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
    </style>

    <style name="SettingsItem" parent="DialogItem">
        <item name="android:background">@drawable/ripple_item_settings</item>
    </style>

    <style name="DialogThemeRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:buttonTint">@color/colorAccent</item>
        <item name="android:padding">@dimen/spacing_normal</item>
    </style>

    <style name="SplashScreenTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/shape_splash_screen</item>
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/colorOnSecondary</item>
        <item name="android:colorPrimary">@color/colorAccent</item>
    </style>

</resources>
