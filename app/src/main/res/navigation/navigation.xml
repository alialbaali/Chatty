<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/signGraph">

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.alialbaali.chatychaty.ui.ChatFragment"
        android:label="ChatFragment"
        tools:layout="@layout/fragment_chat">
        <action
            android:id="@+id/action_chatFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_chatFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <argument
            android:name="chatId"
            app:argType="integer" />
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="username"
            app:argType="string" />
        <argument
            android:name="img_url"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <navigation
        android:id="@+id/signGraph"
        app:startDestination="@id/signUpFragment">
        <fragment
            android:id="@+id/signUpFragment"
            android:name="com.alialbaali.chatychaty.ui.SignUpFragment"
            android:label="SignUpFragment"
            tools:layout="@layout/fragment_sign_up">
            <action
                android:id="@+id/action_signUpFragment_to_signInFragment"
                app:destination="@id/signInFragment"
                app:launchSingleTop="true"
                app:popUpTo="@id/signInFragment"
                app:popUpToInclusive="false" />
        </fragment>
        <fragment
            android:id="@+id/signInFragment"
            android:name="com.alialbaali.chatychaty.ui.SignInFragment"
            android:label="SignInFragment"
            tools:layout="@layout/fragment_sign_in">
            <action
                android:id="@+id/action_signInFragment_to_signUpFragment"
                app:destination="@id/signUpFragment"
                app:launchSingleTop="true"
                app:popUpTo="@id/signUpFragment"
                app:popUpToInclusive="false" />
        </fragment>
        <action
            android:id="@+id/action_global_listFragment"
            app:destination="@id/listFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
    </navigation>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.alialbaali.chatychaty.ui.ListFragment"
        android:label="ListFragment"
        tools:layout="@layout/fragment_list">
        <action
            android:id="@+id/action_listFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_listFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_listFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:launchSingleTop="false" />
        <argument
            android:name="username"
            android:defaultValue=" "
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.alialbaali.chatychaty.ui.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="name"
            android:defaultValue=" "
            app:argType="string" />
        <argument
            android:name="username"
            android:defaultValue=" "
            app:argType="string" />
        <argument
            android:name="img_url"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="chat_id"
            app:argType="integer"/>
        <action
            android:id="@+id/action_profileFragment_to_signGraph"
            app:destination="@id/signGraph"
            app:launchSingleTop="true"
            app:popUpTo="@id/listFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_profileFragment_to_listFragment2"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_profileFragment_to_listFragment3"
            app:destination="@id/listFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/listFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.alialbaali.chatychaty.ui.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/listFragment"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>