<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/cl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/margin_extra_small"
            app:srcCompat="@drawable/img_background"
            android:contentDescription="@string/user_image" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_extra_small"
            android:background="@drawable/chat_item_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_item_tv_text"
                style="@style/chat_item_tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="@dimen/margin_small"
                android:gravity="top"
                tools:text="Hi, How are you doing?" />

            <TextView
                android:id="@+id/chat_item_tv_username"
                style="@style/chat_item_tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/margin_small"
                tools:text="Ali Albaali" />

        </LinearLayout>
    </LinearLayout>
</layout>