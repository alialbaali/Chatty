<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="message"
            type="com.apps.chatychaty.model.Message" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/message_end_margin"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_marginEnd="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_small"
            android:background="@drawable/list_item_sender_message_background"
            android:elevation="@dimen/elevation_small">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/spacing_small"
                android:text="@{message.messageBody}"
                android:textAppearance="@style/TextAppearance.Message.Text"
                android:textColor="@color/colorSurface"
                tools:text="Hello What's up man? How are you doing?">

            </com.google.android.material.textview.MaterialTextView>

            <ImageView
                android:id="@+id/delivered"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="@dimen/spacing_extra_small"
                android:layout_marginBottom="@dimen/spacing_extra_small"
                android:layout_weight="0"
                android:contentDescription="@string/delivered"
                android:src="@drawable/ic_loading_24dp"
                android:tint="@color/colorSurface"
                app:isMessageDelivered="@{message.delivered}" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/spacing_small"
                android:paddingTop="@dimen/spacing_extra_small"
                android:paddingEnd="@dimen/spacing_small"
                android:paddingBottom="@dimen/spacing_small"
                android:textAppearance="@style/TextAppearance.Message.Time"
                android:visibility="gone"
                tools:text="6:30 AM" />
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
